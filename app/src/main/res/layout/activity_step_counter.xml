<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StepCounter.StepCounterActivity">

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/circle_step"
                        android:layout_width="333dp"
                        android:layout_height="400sp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/circle" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="50sp"
                        app:srcCompat="@drawable/icon" />

                    <TextView
                        android:id="@+id/num_step"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="40sp"
                        android:text="0 Bước"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="80sp"
                        android:text="Trên 0 bước đặt mục tiêu"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textStyle="bold" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="480sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVie2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15sp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_stopwatch"
                        android:gravity="start|center"
                        android:text=" 0 phút"
                        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textVi2"
                        android:layout_width="10dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="|"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textV2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_location_on_road"
                        android:gravity="start|center_vertical"
                        android:text=" 0 km"
                        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="|"
                        android:textAllCaps="false"
                        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/ic_calories"
                        android:gravity="start|center_vertical"
                        android:text=" 0 calos"
                        android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40sp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_target"
                    android:background="@drawable/border_radius"
                    android:text="Đặt mục tiêu" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableStart="@drawable/ic_pause"
                    android:background="@drawable/border_radius"
                    android:text="Tạm dừng" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
